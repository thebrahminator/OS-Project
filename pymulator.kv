ScreenManager:
    id: manager
    Screen:
        name: "Main"
        canvas:
            Color:
                rgb: .35, .39, .43
            Rectangle:
                size: self.size
        BoxLayout:
            orientation:"vertical"
            padding: 10
            spacing: 10
            Button:
                text: 'Configuration'
                on_press: app.open_settings()
            Button:
                text: 'Graphics'
                on_press: manager.current = 'Graphics'

    Screen:
        name: "Graphics"
        canvas:
            Color:
                rgb: .31, .35, .39
            Rectangle:
                size: self.size
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                size_hint_x:None
                Button:
                    text: 'FCFS'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'SSTF'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'SCAN'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'CSCAN'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'LOOK'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'CLOOK'
                    on_press:  graph_screen.update_ui(app.simulator.execute_algorithm(self.text))
                Button:
                    text: 'Configuration'
                    on_press: app.open_settings()
                BoxLayout:
                    orientation: 'horizontal'
                    Button:
                        text: '<'
                        on_press: manager.current = 'Main'
                    Button:
                        text: 'x'
                        on_press: graph_screen.clear_ui()
            GraphicScreen:
                rows: 2
                id: graph_screen
                labels: labels
                graph_canvas: graph_canvas
                AnchorLayout:
                    anchor_x:"center"
                    anchor_y:"center"
                    Graphic:
                        id: graph_canvas
                        size_hint: None, None
                        size: 512, 470
                BoxLayout:
                    id: labels
                    size_hint: 1, .12
                    Label:
                        text: " - "
                    Label:
                        text: " - "
                    Label:
                        text: " - "
